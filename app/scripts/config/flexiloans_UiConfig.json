{
  "enableUIDisplayConfiguration": true,
  "uiDisplayConfigurations": {
  	"loanAccount": {
  		"isHiddenField": {
          "netDisbursalAmount": false,
          "fundId": false,
          "linkAccountId": false,
          "createStandingInstruction": false,
          "loanPurpose": false,
          "preferredPaymentChannel": false
  		},
      "isReadOnlyField": {
        "externalId": false,
        "displayName": false,
        "submittedOn": false,
        "firstRepaymentDate":false,
        "loanTermFrequencyType": false,
        "repaymentFrequencyType": false
      }
    },
    "savingsAccount":{
      "overDraft":{
        "isReadOnlyField" :{
          "isOverdraftAllowed" : true,
          "isDrawingPowerLimitAllowed" : true
        }
      }
    },
    "bankAccountDetails": {
      "isMandatory": {
        "accountType": true,
        "bankIFSCCode": true
      },
      "regexValidations" :{
        "mobileNumber":"^[1-9]{1}\\d{9}$",
        "bankIFSCCode":"^[A-Za-z0-9_]{1,11}$",
        "bankCity":"^(?!.*?\\s{2})[A-Za-z-/_.@%& ]{1,20}$",
        "bankName":"^(?!.*?\\s{2})[A-Za-z-/_.@%& ]{1,20}$",
        "bankAccountNumber":"^[a-zA-Z0-9_]{1,50}$"
      }
    },
    "createMandates":{
      "showEMIBalance": true
    },
    "createClient": {
      "isMandatoryField": {
        "clientClassificationId": true,
        "mobileNumber":true,
        "emailId":true
      }
    }
  }
}
