{
  "enableUIDisplayConfiguration": true,
  "uiDisplayConfigurations": {
    "loanAccount": {
      "isHiddenField": {
        "interestChargedFromDate": true
      },
      "isMandatory": {
        "isPreclosureReasonEnabled" : true,
        "transactionPaymentMode": true,
				"transactionPaymentType": true
      }
    },
    "createCenter": {
      "isReadOnlyField": {
        "active": true,
        "name": true
      },
      "isHiddenField": {
        "villageOptions": false,
        "addGroups": false
      },
      "autogeneratedCenterName": {
        "characterCRequired": true
      }
    },
    "workflow": {
      "loanApproval": {
        "hiddenField": {
          "clientAddress": false
        }
      },
      "isMandatory": {
        "rejectReason":true,
        "rejectDescription": true
      },
      "deceasedWorkflow": {
        "showPolicy" : true,
        "showMarkAsDeceased" : true
      }
    },
    "collectionSheet": {
      "isHiddenFeild": {
        "paymentDetails": true

      }
    },
    "createClient": {
      "isReadOnlyField": {
        "gender": true
      },
      "isValidateDOBField": {
        "active": true,
        "ageCriteria": {
          "minAge": 18,
          "maxAge": 60
        }
      },
      "isMandatoryField": {
        "dateOfBirth": true,
        "mobileNumber":true
      },
      "defaultGender":"Female"
    },
    "bankAccountDetails": {
      "isMandatory": {
      "bankAccountHolderName": true,
      "bankAccountNumber": true,
      "accountType": false,
      "bankIFSCCode": true,
      "bankName": false,
      "bankCity": false,
      "mobileNumber": false,
      "lastTransactionDate": false,
      "docFile": false
      },
      "isHiddenField":{
        "bankIFSCCodeRepeat":false,
        "bankAccountNumberRepeat":false,
      "lastTransactionDate": true,
        "micrCode": true
      },
      "regexValidations" :{
        "mobileNumber":"^\\d{10}$",
        "bankIFSCCode":"^[A-Z]{4}0[A-Z0-9]{6}$",
        "bankCity":"^[A-Za-z]{1,20}$",
        "bankName":"^(?!.*?\\s{2})[A-Za-z ]{1,20}$",
        "bankAccountNumber":"^[0-9]{1,50}$",
        "bankAccountHolderName":"^[a-zA-Z]+([a-zA-Z\\s][a-zA-Z]+)*$"
      },
      "isMakerTwoStepPresent": true
    },
    "viewGroup":{
      "isHiddenField": {
          "canAddClients": true,
          "createjlgLoanApplication" : true
      },
      "searchForActivegroups": false
    },
    "createLoanApplication": {
      "newLoanApplicationLimitAllowed" : true
    },
    "meeting": {
			"showAllRepeatsOptions": false
		},
    "viewClient": {
      "isHiddenField": {
        "createClient": true,
        "createLoanApplication": true
      }
    },
    "createJlgLoan": {
      "isHiddenField": {
        "jlgLoan": true
      }
    },
    "accounting": {
			"isHiddenField":{
				"migrateOpeningBalances": true 
			}
		}
  }
}